<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.backg {
			background-color: #E0E0E3;
			-webkit-background-size: cover;
			-moz-background-size: cover;
			-o-background-size: cover;
			background-size: cover;
			height: 100%;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.backg}">
		<div class="login-card">
			<h1>DATATRON</h1>
			<br />
			<g:TextBox ui:field="user"></g:TextBox>
			<g:PasswordTextBox ui:field="pass"></g:PasswordTextBox>
			<g:SubmitButton ui:field="login" styleName="login login-submit">login</g:SubmitButton>
			<br />
		
			<div class="login-help">
				<g:Anchor ui:field="forgot">Forgot Password ?</g:Anchor>
			</div>
			
			<g:TextBox ui:field="question"></g:TextBox>
			<g:TextBox ui:field="answer"></g:TextBox>
			<g:SubmitButton ui:field="forgetPwd" styleName="login login-submit">login</g:SubmitButton>
			<div class="login-help">
				<g:Anchor ui:field="back">Back to Login/Password</g:Anchor>
			</div>
			
			<br />
			
			<div class="login-help">
				<g:Label ui:field="msg"></g:Label>
			</div>
			
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 