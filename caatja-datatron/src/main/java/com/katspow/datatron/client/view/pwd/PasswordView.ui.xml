<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel>
		<article class="module width_half">
			<header>
				<h3>Change Datatron password</h3>
			</header>
			<div class="module_content">
				<fieldset>
					<label>Current password</label>
					<g:TextBox ui:field="currentPwd"></g:TextBox>
				</fieldset>
				<fieldset>
					<label>New password</label>
					<g:TextBox ui:field="newPwd"></g:TextBox>
				</fieldset>
				<fieldset>
					<label>Confirm password</label>
					<g:TextBox ui:field="confirmPwd"></g:TextBox>
				</fieldset>
			</div>
			
			<footer>
				<div class="submit_link">
					<g:SubmitButton ui:field="saveBtn" styleName="alt_btn">Save</g:SubmitButton>
				</div>
			</footer>
			
		</article>
	</g:HTMLPanel>
</ui:UiBinder> 