<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel>
		<article class="module width_half">
			<header>
				<h3>Change Datatron password</h3>
			</header>
			<div class="module_content">
				<fieldset>
					<label>Login</label>
					<g:TextBox ui:field="login"></g:TextBox>
				</fieldset>
				<fieldset>
					<label>Password</label>
					<g:TextBox ui:field="newPwd"></g:TextBox>
				</fieldset>
				
				<h4>You can define a question/answer, they will be used if you forget you password :</h4>
				
				<fieldset>
					<label>Question</label>
					<g:TextBox ui:field="question"></g:TextBox>
				</fieldset>
				<fieldset>
					<label>Answer</label>
					<g:TextBox ui:field="answer"></g:TextBox>
				</fieldset>
			</div>
			
			<footer>
				<div class="submit_link">
					<g:SubmitButton ui:field="saveBtn" styleName="alt_btn">Save</g:SubmitButton>
				</div>
			</footer>
			
		</article>
		
	</g:HTMLPanel>
</ui:UiBinder> 