<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel ui:field="container">
		<g:DialogBox ui:field="dialogBox">
			<g:HTMLPanel>
				<div id="main">
					<article class="module width_full">
						<header>
							<h3>Create a new score</h3>
						</header>
						<div class="module_content">
						
							<fieldset>
								<label>Name</label>
								<g:TextBox ui:field="nameFld"></g:TextBox>
							</fieldset>
							
							<fieldset>
								<label>Score</label>
								<g:TextBox ui:field="scoreFld"></g:TextBox>
							</fieldset>
						
							<g:HTML ui:field="errorMsg"></g:HTML>
						</div>

						<footer>
							<div class="submit_link">
								<g:SubmitButton ui:field="okBtn" styleName="alt_btn">Ok</g:SubmitButton>
								<g:SubmitButton ui:field="cancelBtn">Cancel</g:SubmitButton>
							</div>
						</footer>
					</article>
				</div>
			</g:HTMLPanel>
		</g:DialogBox>
	</g:HTMLPanel>
</ui:UiBinder> 